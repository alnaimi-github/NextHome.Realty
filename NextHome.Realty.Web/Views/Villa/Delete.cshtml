@model Villa

<div class="w-100 card border-0  p-4 border">
    <div class="card-header bg-dark bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12">
                <h2 class="text-primary text-center py-2">Delete Villa</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form method="post" action="" class="row">
            <input asp-for="Id" hidden />
              <div class="row">
                <div class="col-10">
            <div class="p-3 shadow">
                <div class="form-floating py-1 col-12">
                    <input asp-for="Name" class="form-control border shadow" disabled />
                    <label asp-for="Name" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Description" class="form-control border shadow" disabled />
                    <label asp-for="Description" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Price" class="form-control border shadow" disabled />
                    <label asp-for="Price" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Sqft" class="form-control border shadow" disabled />
                    <label asp-for="Sqft" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Occupancy" class="form-control border shadow" disabled />
                    <label asp-for="Occupancy" class="ms-2"></label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="index" asp-controller="Villa" class="btn btn-dark w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                        </div>
                            </div>
                </div>
                <div class="col-2">
                    @if (Model.VillaImages!.Count > 0)
                    {
                        foreach (var image in Model.VillaImages)
                        {
                            <div class="border p-1 m-2 text-center">
                                <img src="@image.ImageUrl" width="100%"
                                     style="border-radius:5px; border:1px solid #bbb9b9" />
                            </div>
                        }
                    }
                    else
                    {
                        <div class="border p-1 m-2 text-center">
                                    <img src="~/images/placeholder.png" width="100%"
                                     style="border-radius:5px; border:1px solid #bbb9b9" />
                            </div>  
                    }
                </div>
            </div>
        </form>
    </div>
</div>
