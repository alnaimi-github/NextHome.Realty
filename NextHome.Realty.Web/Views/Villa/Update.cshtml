@model Villa

<div class="w-100 card border-0  p-4 border">
    <div class="card-header bg-dark bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12">
                <h2 class="text-primary text-center py-2">Update Villa</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form method="post" action="" enctype="multipart/form-data" class="row">
            <input asp-for="Id" hidden/>
             <div class="row">
                <div class="col-10">
            <div class="p-3 shadow">
                <div class="form-floating py-1 col-12">
                    <input asp-for="Name" class="form-control border shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Description" class="form-control border shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Price" class="form-control border shadow" />
                    <label asp-for="Price" class="ms-2"></label>
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Sqft" class="form-control border shadow" />
                    <label asp-for="Sqft" class="ms-2"></label>
                    <span class="text-danger" asp-validation-for="Sqft"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Occupancy" class="form-control border shadow" />
                    <label asp-for="Occupancy" class="ms-2"></label>
                    <span class="text-danger" asp-validation-for="Occupancy"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input  type="file" name="files" multiple class="form-control border shadow" />
                    <label asp-for="VillaImages" class="ms-2"></label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-dark w-100">
                            <i class="bi bi-check-circle"></i> Update
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="index" asp-controller="Villa" class="btn btn-dark w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>

                </div>
                 </div>
                  </div>
                 <div class="col-2">
                    @if (Model.VillaImages!.Count>0)
                    {
                        foreach (var image in Model.VillaImages)
                        {
                            <div class="border p-1 m-2 text-center">
                                <img src="@image.ImageUrl" width="100%"
                                     style="border-radius:5px; border:1px solid #bbb9b9" />
                                <a asp-controller="Villa" asp-action="DeleteImage" class="btn btn-danger" asp-route-imageId="@image.Id">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        }
                    }
                   else
                    {
                        <div class="border p-1 m-2 text-center">
                                    <img src="~/images/placeholder.png" width="100%"
                                     style="border-radius:5px; border:1px solid #bbb9b9" />
                            </div>  
                    }
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
