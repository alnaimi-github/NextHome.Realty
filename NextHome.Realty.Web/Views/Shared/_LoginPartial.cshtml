
<ul class="navbar-nav">
    @if (!User.Identity!.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-warning" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-warning" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-warning" href="#">Hello, @User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-warning" asp-controller="Account" asp-action="Logout">Logout</a>
        </li> 
    }
</ul>