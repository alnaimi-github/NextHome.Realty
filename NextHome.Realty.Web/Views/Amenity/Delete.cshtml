@model AmenityVM

<div class="w-100 card border-0  p-4 border">
    <div class="card-header bg-dark bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12">
                <h2 class="text-primary text-center py-2">Delete Amenity</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form method="post" action="" class="row">
                  <input asp-for="Amenity!.Id" hidden/>
            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <select asp-for="Amenity!.VillaId" disabled class="form-select border shadow" asp-items="@Model.VillaList">
                    <option disabled selected>--Select Villa--</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Amenity!.VillaId"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Amenity!.Name" class="form-control border shadow" disabled />
                    <label asp-for="Amenity!.Name" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Amenity!.Description" class="form-control border shadow" disabled />
                    <label asp-for="Amenity!.Description" class="ms-2"></label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" asp-controller="Amenity" class="btn btn-dark w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>
