@using NextHome.Realty.Application.Common.Utility

@{
    var status = Context.Request.Query["status"];
    var pending = "";
    var completed = "";
    var approved = "";
    var checkedIn = "";
    var cancelled = "";
    var all = "";

    switch (status)
    {
        case nameof(SD.StatusPayment.Pending):
            pending = "bg-warning";
            break;
        case nameof(SD.StatusPayment.Cancelled):
            cancelled = "bg-warning";
            break;
        case nameof(SD.StatusPayment.Completed):
            completed = "bg-warning";
            break;
        case nameof(SD.StatusPayment.Approved):
            approved = "bg-warning";
            break;
        case nameof(SD.StatusPayment.CheckedIn):
            checkedIn = "bg-warning";
            break;
        default:
            all = "bg-warning";
            break;
    }
}

<br/>
<div class="w-100 card border-0  p-4 border">
    <div class="card-header bg-dark bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12">
                <h2 class="text-primary text-center py-2">Booking List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-2">
        <div class="d-flex justify-content-end pb-4 pt-2">
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration: none;" asp-controller="Booking"
                   asp-action="Index" asp-route-status="all">
                    <li class="list-group-item @all">All</li>
                </a>
                <a style="text-decoration: none;" asp-controller="Booking"
                   asp-action="Index" asp-route-status="@SD.StatusPayment.Pending.ToString()">
                    <li class="list-group-item @pending">@SD.StatusPayment.Pending.ToString()</li>
                </a>
                <a style="text-decoration: none;" asp-controller="Booking"
                   asp-action="Index" asp-route-status="@SD.StatusPayment.Approved.ToString()">
                    <li class="list-group-item @approved">@SD.StatusPayment.Approved.ToString()</li>
                </a>
                <a style="text-decoration: none;" asp-controller="Booking"
                   asp-action="Index" asp-route-status="@SD.StatusPayment.CheckedIn.ToString()">
                    <li class="list-group-item @checkedIn">@SD.StatusPayment.CheckedIn.ToString()</li>
                </a>
                <a style="text-decoration: none;" asp-controller="Booking"
                   asp-action="Index" asp-route-status="@SD.StatusPayment.Completed.ToString()">
                    <li class="list-group-item @completed">@SD.StatusPayment.Completed.ToString()</li>
                </a>
                <a style="text-decoration: none;" asp-controller="Booking"
                   asp-action="Index" asp-route-status="@SD.StatusPayment.Cancelled.ToString()">
                    <li class="list-group-item @cancelled">@SD.StatusPayment.Cancelled.ToString()</li>
                </a>
            </ul>
        </div>
        <table id="tblBookings" class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Status</th>
                <th>Check In Date</th>
                <th>Nights</th>
                <th>Total</th>
                <th></th>
            </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
</div>


@section Scripts
{
    <script src="js/booking.js"></script>
}