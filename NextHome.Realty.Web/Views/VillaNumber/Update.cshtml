@model VillaNumberVM

<div class="w-100 card border-0  p-4 border">
    <div class="card-header bg-dark bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12">
                <h2 class="text-primary text-center py-2">Update Villa Number</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form method="post" action="" class="row">
            <input asp-for="VillaNumber!.Villa_Number" hidden/>
            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <select asp-for="VillaNumber!.VillaId" class="form-select border shadow" asp-items="@Model.VillaList">
                    <option disabled selected>--Select Villa--</option>
                    </select>
                    <span class="text-danger" asp-validation-for="VillaNumber!.VillaId"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="VillaNumber!.Villa_Number" disabled class="form-control border shadow" />
                    <label asp-for="VillaNumber!.Villa_Number" class="ms-2"></label>
                    <span class="text-danger" asp-validation-for="VillaNumber!.Villa_Number"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="VillaNumber!.SpecialDetails" class="form-control border shadow" />
                    <label asp-for="VillaNumber!.SpecialDetails" class="ms-2"></label>
                    <span class="text-danger" asp-validation-for="VillaNumber!.SpecialDetails"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-dark w-100">
                            <i class="bi bi-check-circle"></i> Update
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="index" asp-controller="VillaNumber" class="btn btn-dark w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
